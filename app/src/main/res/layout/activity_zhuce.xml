<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_zhuce"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.beijing.qzszg.LoginActivity">

    <EditText
        android:id="@+id/editText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="请输入6-15位用户名"
        android:gravity="center"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textSize="18sp"
        android:maxLines="1"/>
    <EditText
        android:id="@+id/editText4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="请输入6-16位密码"
        android:gravity="center"
        android:ems="10"
        android:layout_below="@+id/editText3"
        android:layout_alignLeft="@+id/editText3"
        android:layout_alignStart="@+id/editText3"
        android:layout_marginTop="0dp"
        android:textSize="18sp"
        android:maxLines="1"/>
    <EditText
        android:id="@+id/editText5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="请再次输入密码"
        android:gravity="center"
        android:ems="10"
        android:layout_below="@id/editText4"
        android:layout_alignLeft="@+id/editText4"
        android:layout_alignStart="@+id/editText4"
        android:layout_marginTop="0dp"
        android:textSize="18sp"
        android:maxLines="1"/>

    <RelativeLayout
        android:layout_marginTop="190dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请选择验证信息"
            android:gravity="center_horizontal"
            android:textSize="18sp"
            android:textColor="@color/colorPrimaryDark"/>
        <RadioGroup
            android:id="@+id/radio_group2"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <RadioButton
                android:checked="true"
                android:id="@+id/qusetion11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="你父母的名字？"
                android:textSize="18sp"/>

            <RadioButton
                android:id="@+id/qusetion22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="你小学的名字？"
                android:textSize="18sp"/>
            <RadioButton
                android:id="@+id/qusetion33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="你朋友的名字？"
                android:textSize="18sp"/>

            <RadioButton
                android:id="@+id/qusetion44"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="你老师的名字？"
                android:textSize="18sp"/>
        </RadioGroup>

        <EditText
            android:id="@+id/input_userpass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:hint="请输入答案"
            android:layout_marginTop="170dp"
            android:gravity="center"
            android:maxLines="1"/>

    </RelativeLayout>
    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注册"
        android:layout_below="@+id/editText5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="240dp" />

</RelativeLayout>
