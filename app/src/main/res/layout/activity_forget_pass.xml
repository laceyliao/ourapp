<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_forget_pass"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.beijing.qzszg.ForgetPass">

    <EditText
        android:id="@+id/fg_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="请输入用户名"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:maxLines="1"/>
    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_marginTop="100dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <RadioButton
            android:checked="true"
            android:id="@+id/qusetion1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="你父母的名字？"
            android:textSize="18sp"/>

        <RadioButton
            android:id="@+id/qusetion2"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="你小学的名字？"
            android:textSize="18sp"/>
        <RadioButton
            android:id="@+id/qusetion3"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="你朋友的名字？"
            android:textSize="18sp"/>

        <RadioButton
            android:id="@+id/qusetion4"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="你老师的名字？"
            android:textSize="18sp"/>
    </RadioGroup>

    <EditText
        android:id="@+id/fg_userpass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="请输入答案"
        android:layout_marginTop="280dp"
        android:gravity="center"
        android:maxLines="1"/>
    <Button
        android:id="@+id/button_verify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="340dp"
        android:layout_marginLeft="130dp"
        android:text="确认"
        />
</RelativeLayout>
